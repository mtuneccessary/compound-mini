{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"types": ["node"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"outDir": "dist"
	},
	"include": [
		"hardhat.config.ts",
		"scripts/**/*.ts",
		"tasks/**/*.ts",
		"test/**/*.ts",
		"contracts/**/*.sol"
	]
} 